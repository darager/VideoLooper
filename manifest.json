{
  "name": "Guitar Video Looper",
  "description": "Tool to make learning songs by ear easier.",
  "version": "1.0",
  "manifest_version": 3,
  "permissions": [
    "scripting",
    "storage",
    "management",
    "activeTab",
    "tabs",
    "contextMenus"
  ],
  "background": {
    "service_worker": "/src/background.js"
  },
  "options_page": "/src/options.html",
  "action": {
    "default_popup": "/src/popup.html",
    "default_icon": "/images/logo.png"
  },
  "icons": {
    "16": "/images/logo16.png",
    "32": "/images/logo32.png",
    "48": "/images/logo48.png",
    "128": "/images/logo.png"
  },
  "commands": {
    "play-pause": {
      "suggested_key": "Alt+K",
      "description": "Resume/Pause Video"
    },
    "move-video-forward": {
      "description": "Forward video a few seconds"
    },
    "move-video-back": {
      "suggested_key": "Alt+J",
      "description": "Reverse video a few seconds"
    },
    "toggle-speed": {
      "suggested_key": "Alt+I",
      "description": "Change video speed"
    },
    "increase-speed": {
      "description": "Increase video speed"
    },
    "decrease-speed": {
      "description": "Decrease video speed"
    },
    "reset-speed": {
      "description": "Toggle between 1x and prefered video speed"
    },
    "toggle-loop": {
      "suggested_key": "Alt+U",
      "description": "Control video looping"
    },
    "set-loop-start": {
      "description": "Set start of video loop"
    },
    "set-loop-end": {
      "description": "Set end of video loop"
    },
    "remove-loop": {
      "description": "Remove video loop"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["/src/videoController.js", "/src/videoControllerFeedback.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["*.png", "*.svg"],
      "matches": ["<all_urls>"]
    }
  ]
}
